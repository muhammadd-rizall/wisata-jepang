<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailWisata">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sensojitemple"
        android:orientation="vertical"
        android:id="@+id/gambar"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="47dp">


        <TextView
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="650dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bree_serif"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3.5"
            android:text="Sensoji Temple"
            android:textColor="#fff"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/poppins"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3.5"
            android:text="it is Tokyo's oldest temple,and one of its most significant.Formerley associated with the Tendai sect of Buddhism"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnseedetail"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btncustom"
            android:text="See Details"
            android:textColor="@color/white" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>